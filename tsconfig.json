{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "nodenext",
    "sourceMap": false,

    /* Linting */
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
